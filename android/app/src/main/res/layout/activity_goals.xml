<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="8dp">

            <View
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="@drawable/rounded_circle_light"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tvHeaderTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set your daily goals"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/brand"/>

            <TextView
                android:id="@+id/tvHeaderSub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Complete these to earn temporary app access"
                android:textSize="14sp"
                android:layout_marginTop="6dp"
                android:textColor="@color/muted"/>
        </LinearLayout>

        <!-- Card: Add new goal -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardAddGoal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            android:layout_marginTop="8dp"
            app:cardElevation="2dp"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:text="Add a new goal"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="Choose platform"
                    android:textSize="14sp"
                    android:layout_marginTop="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvPlatforms"
                    android:layout_width="match_parent"
                    android:layout_height="260dp"
                    android:layout_marginTop="8dp"
                    android:clipToPadding="false"/>

                <!-- Selected platform preview -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardSelectedPlatform"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    app:cardCornerRadius="10dp"
                    android:layout_marginTop="12dp"
                    app:cardElevation="0dp"
                    android:visibility="gone"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/ivSelectedIcon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_leetcode" />

                        <TextView
                            android:id="@+id/tvSelectedPlatformName"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="LeetCode"
                            android:textStyle="bold"
                            android:layout_marginStart="12dp"/>

                        <TextView
                            android:id="@+id/tvChange"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Change"
                            android:textColor="@color/brand"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Goal types -->
                <TextView
                    android:text="What's your goal?"
                    android:layout_marginTop="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvGoalTypes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"/>

                <!-- Target row -->
                <TextView
                    android:id="@+id/tvTargetLabel"
                    android:text="Target (problems)"
                    android:layout_marginTop="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/etTarget"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginTop="8dp"
                    android:hint="2"
                    android:background="@drawable/rounded_input"
                    android:padding="12dp"/>

                <!-- Add this goal -->
                <Button
                    android:id="@+id/btnAddGoal"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Add this goal"
                    android:textAllCaps="false"
                    android:layout_marginTop="12dp"
                    android:backgroundTint="@color/brand"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Your goals for today -->
        <TextView
            android:id="@+id/tvTodayTitle"
            android:text="Your goals for today"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/emptyStateCard"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="1dp"
            android:padding="18dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <View
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="@drawable/rounded_circle_light"
                    />

                <TextView
                    android:layout_marginTop="8dp"
                    android:text="No goals yet"
                    android:textStyle="bold"
                    android:textSize="16sp" android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>

                <TextView
                    android:layout_marginTop="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add some goals to earn app unlock time"
                    android:textColor="@color/muted"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvGoals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:visibility="gone" />

        <!-- Pro tips -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="12dp"
            android:padding="12dp"
            app:cardElevation="0dp">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="ðŸ’¡  Pro tips\n\nâ€¢ Start with smaller, achievable goals\nâ€¢ Set deadlines to create urgency\nâ€¢ Track progress honestly - it helps build habits"
                android:lineSpacingExtra="4dp"
                android:textColor="@color/muted"/>
        </androidx.cardview.widget.CardView>

        <!-- Bottom CTA -->
        <Button
            android:id="@+id/btnStart"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="20dp"
            android:text="Add at least one goal to continue"
            android:textAllCaps="false"
            android:backgroundTint="@color/brand"
            android:textColor="@color/white"/>

        <View android:layout_height="18dp" android:layout_width="match_parent"/>

    </LinearLayout>
</ScrollView>
