<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none"
    android:fadeScrollbars="false"
    android:background="@color/bg_white"
    android:paddingStart="@dimen/screen_horizontal_padding"
    android:paddingEnd="@dimen/screen_horizontal_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Top header icon + title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/header_top_margin">

            <View
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="@drawable/ic_header_round_bg"
                android:layout_marginBottom="@dimen/header_icon_spacing" />

            <TextView
                android:id="@+id/tvHeaderTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set your daily goals"
                android:textSize="22sp"
                android:fontFamily="@string/font_family_poppins"
                android:textStyle="bold"
                android:textColor="@color/text_primary" />

            <TextView
                android:id="@+id/tvHeaderSub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Complete these to earn temporary app access"
                android:textSize="14sp"
                android:layout_marginTop="@dimen/header_sub_spacing"
                android:textColor="@color/text_muted" />
        </LinearLayout>

        <!-- thin divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/header_divider_top"
            android:background="@color/divider_light" />

        <!-- Add a new goal card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardAddGoal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/card_radius"
            android:layout_marginTop="@dimen/card_top_margin"
            app:cardElevation="0dp"
            android:background="@color/white"
            android:padding="@dimen/card_padding">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvAddNewGoal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add a new goal"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary" />

                <!-- Choose platform title -->
                <TextView
                    android:id="@+id/tvChoosePlatform"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Choose platform"
                    android:textSize="14sp"
                    android:layout_marginTop="@dimen/section_spacing"
                    android:textColor="@color/text_primary" />

                <!-- Grid of platform tiles -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvPlatforms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/tiles_margin_top"
                    android:overScrollMode="never"
                    android:clipToPadding="false"
                    android:scrollbars="none"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    app:spanCount="2" />

                <!-- Selected platform preview -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardSelectedPlatform"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_marginTop="@dimen/selected_platform_margin_top"
                    app:cardCornerRadius="@dimen/selected_card_radius"
                    app:cardElevation="0dp"
                    android:visibility="gone"
                    android:background="@color/selected_card_bg">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/selected_card_padding"
                        android:paddingEnd="@dimen/selected_card_padding">

                        <ImageView
                            android:id="@+id/ivSelectedIcon"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/ic_leetcode"
                            android:contentDescription="@string/platform_icon" />

                        <TextView
                            android:id="@+id/tvSelectedPlatformName"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="LeetCode"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:layout_marginStart="12dp"
                            android:textColor="@color/text_primary" />

                        <TextView
                            android:id="@+id/tvChange"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Change"
                            android:textColor="@color/accent_blue" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- What's your goal -->
                <TextView
                    android:id="@+id/tvWhatsGoal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="What's your goal?"
                    android:textSize="14sp"
                    android:layout_marginTop="@dimen/section_spacing"
                    android:textColor="@color/text_primary" />

                <!-- Vertical list of goal types -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvGoalTypes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/tiles_margin_top"
                    android:overScrollMode="never"
                    android:scrollbars="none" />

                <!-- Target label + input -->
                <TextView
                    android:id="@+id/tvTargetLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Target (problems)"
                    android:layout_marginTop="@dimen/section_spacing"
                    android:textColor="@color/text_primary" />

                <EditText
                    android:id="@+id/etTarget"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="@dimen/target_margin_top"
                    android:hint="2"
                    android:background="@drawable/bg_input_rounded"
                    android:padding="@dimen/input_padding"
                    android:inputType="number" />

                <!-- Add this goal button (dark pill) -->
                <Button
                    android:id="@+id/btnAddGoal"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="@dimen/btn_add_margin_top"
                    android:text="+ Add this goal"
                    android:background="@drawable/btn_dark_pill"
                    android:textColor="@color/white"
                    android:textAllCaps="false" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Your goals for today header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/section_big_margin">

            <TextView
                android:id="@+id/tvTodayTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your goals for today"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/text_primary" />

            <View
                android:layout_width="8dp"
                android:layout_height="1dp" />

            <TextView
                android:id="@+id/tvCountBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 goal"
                android:background="@drawable/badge_bg"
                android:padding="@dimen/badge_padding"
                android:textColor="@color/text_primary"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Empty state card (shows when no goals) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/emptyStateCard"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginTop="@dimen/empty_card_margin_top"
            app:cardCornerRadius="@dimen/card_radius"
            app:cardElevation="0dp"
            android:padding="@dimen/card_inner_padding">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <View
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="@drawable/ic_header_round_bg" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="No goals yet"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Add some goals to earn app unlock time"
                    android:textColor="@color/text_muted" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Goals list -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvGoals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="@dimen/section_spacing" />

        <!-- Pro tips card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/proTipCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/card_radius"
            android:layout_marginTop="@dimen/section_spacing"
            android:padding="@dimen/card_inner_padding"
            app:cardElevation="0dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="💡  Pro tips\n\n• Start with smaller, achievable goals\n• Set deadlines to create urgency\n• Track progress honestly - it helps build habits"
                android:lineSpacingExtra="4dp"
                android:textColor="@color/text_muted"/>
        </androidx.cardview.widget.CardView>

        <!-- Bottom CTA -->
        <Button
            android:id="@+id/btnStart"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="@dimen/bottom_cta_margin_top"
            android:text="Add at least one goal to continue"
            android:background="@drawable/btn_dark_pill"
            android:textColor="@color/white"
            android:textAllCaps="false" />

        <View android:layout_height="18dp" android:layout_width="match_parent"/>
    </LinearLayout>
</ScrollView>
