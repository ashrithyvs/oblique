<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:strokeWidth="0dp"
    android:backgroundTint="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="14dp">

        <!-- Icon -->
        <ImageView
            android:id="@+id/ivGoalIcon"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/ic_meditation"
            android:contentDescription="goal icon"
            android:background="@drawable/circle_gray"
            android:padding="8dp" />

        <!-- Goal details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <!-- Title -->
            <TextView
                android:id="@+id/tvGoalTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Meditation"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary" />

            <!-- Progress row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <ProgressBar
                    android:id="@+id/progressBarGoal"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="10dp"
                    android:layout_weight="1"
                    android:progress="0"
                    android:max="2"
                    android:progressDrawable="@drawable/progress_goal" />

                <TextView
                    android:id="@+id/tvGoalProgress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0/2"
                    android:textSize="13sp"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/text_muted" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
