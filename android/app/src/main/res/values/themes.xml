<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- App base theme -->
    <style name="Theme.Oblique" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
    </style>

    <!-- SplashScreen theme -->
    <style name="Theme.Oblique.Splash" parent="Theme.SplashScreen">
        <!-- Icon shown during splash -->
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <!-- Splash background -->
        <item name="windowSplashScreenBackground">@color/black</item>
        <!-- Theme to apply after splash -->
        <item name="postSplashScreenTheme">@style/Theme.Oblique</item>
    </style>

    <!-- Dashboard with safe insets (no overlap with status bar) -->
    <style name="Theme.Oblique.NoEdgeToEdge" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <!-- PIN / Prompt dialog -->
    <style name="Theme.Oblique.Dialog" parent="Theme.Material3.DayNight.Dialog.Alert">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>

</resources>
