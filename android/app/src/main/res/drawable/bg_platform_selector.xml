<?xml version="1.0" encoding="utf-8"?>
<!-- bg_platform_selector.xml â€” activated state used for selection visuals -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- pressed (touch) state: subtle overlay so ripple shows nicely -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#F0F1F3"/> <!-- slight tint while pressing -->
            <corners android:radius="12dp"/>
        </shape>
    </item>

    <!-- activated = selected by adapter -->
    <item android:state_activated="true">
        <shape android:shape="rectangle">
            <solid android:color="#F5F6F8"/> <!-- selected tile background -->
            <stroke android:width="1dp" android:color="#E6E7EA"/>
            <corners android:radius="12dp"/>
        </shape>
    </item>

    <!-- selected -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#F5F6F8"/>
            <stroke android:width="1dp" android:color="#E6E7EA"/>
            <corners android:radius="12dp"/>
        </shape>
    </item>


    <!-- default -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/>
            <corners android:radius="12dp"/>
        </shape>
    </item>
</selector>
